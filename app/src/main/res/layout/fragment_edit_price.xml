<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:text="Edit price page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/menu_items_border"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <TextView
            android:text="Cappuccino price : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/edit_price_cappuccino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Cappuccino price" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/menu_items_border"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:text="Espresso price : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />

        <EditText
            android:id="@+id/edit_price_espresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Espresso price"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/menu_items_border"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:text="Americano price : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/edit_price_americano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Americano price"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/menu_items_border"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:text="Macchiato price : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/edit_price_macchiato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Macchiato price"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/menu_items_border"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:text="Latte price : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/edit_price_latte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Latte price"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/menu_items_border"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:text="Mocha price : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/edit_price_mocha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Mocha price"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/menu_items_border"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:text="Cocoa price : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/edit_price_cocoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Cocoa price"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/edit_price_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/edit_price_update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update"
        android:background="@drawable/border_button"/>

</LinearLayout>