<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_picture"
                android:src="@drawable/ic_person_user" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/profile_camera_button"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_button"
                    android:text="Open camera"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/profile_choose_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_button"
                    android:text="Choose picture"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <EditText
                android:id="@+id/profile_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/border_textinput"
                android:drawableLeft="@drawable/ic_email"
                android:hint="Email"
                android:inputType="textPassword"
                android:padding="7dp"
                android:textColorHint="#000" />

            <EditText
                android:id="@+id/profile_username"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/border_textinput"
                android:drawableLeft="@drawable/ic_person_user"
                android:hint="Username"
                android:inputType="textPassword"
                android:padding="7dp"
                android:textColorHint="#000" />


            <ImageView
                android:id="@+id/profile_selected_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/profile_shop_owner_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/profile_shop_picture"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/profile_shop_name"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_textinput"
                    android:drawableLeft="@drawable/ic_shop_name"
                    android:hint="Shop name"
                    android:inputType="textPassword"
                    android:padding="7dp"
                    android:textColorHint="#000" />

                <EditText
                    android:id="@+id/profile_location"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:background="@drawable/border_textinput"
                    android:drawableLeft="@drawable/ic_location"
                    android:hint="Location"
                    android:inputType="textPassword"
                    android:padding="7dp"
                    android:textColorHint="#000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/profile_shop_camera_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_button"
                        android:text="Open camera"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/profile_shop_choose_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_button"
                        android:text="Choose picture"
                        android:textColor="#ffffff" />
                </LinearLayout>


            </LinearLayout>

            <ProgressBar
                android:id="@+id/profile_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <Button
                android:id="@+id/profile_confirm_button"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_button"
                android:text="Ok"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>